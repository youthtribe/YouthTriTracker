/** ROUTES **/
.state('admin', {
  url: '/admin',
  controller: 'adminController',
  templateUrl: 'views/admin.html'
})
.state('leaderboard', {
  url: '/leaderboard',
  controller: 'leaderboardController',
  templateUrl: 'views/leaderboard.html'
})
.state('leaderboard.id', {
  url: '/:id',
  controller: 'leaderboardController',
  templateUrl: 'views/leaderboard.html'
})
.state('legal', {
  url: '/legal',
  controller: 'legalController',
  templateUrl: 'views/legal.html'
})
.state('legal.id', {
  url: '/:id',
  controller: 'legalController',
  templateUrl: 'views/legal.html'
})
